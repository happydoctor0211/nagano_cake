
<div class="container">
   <h4>マイページ</h4>
   <div class="row">
     <p class="col-lg-1"><strong>登録情報</strong></p>
     <p><%= link_to "編集する", customers_edit_path %></p>
   </div>
</div>


<table class="container table">
  <tr class="row">
    <td class="table-active col-lg-2">氏名</td>
    <td class="col-lg-7"><%= current_customer.first_name %><%= current_customer.last_name %></td>
  </tr>
  <tr class="row">
    <td class="table-active col-lg-2">カナ</td>
    <td class="col-lg-7"><%= current_customer.first_name_kana %><%= current_customer.last_name_kana %> </td>
  </tr>
  <tr class="row">
    <td class="table-active col-lg-2">郵便番号</td>
    <td class="col-lg-7"><%= current_customer.postal_code %></td>
  </tr>
  <tr class="row">
    <td class="table-active col-lg-2">住所</td>
    <td class="col-lg-7"><%= current_customer.address %></td>
  </tr>
  <tr class="row">
    <td class="table-active col-lg-2">電話番号</td>
    <td class="col-lg-7"><%= current_customer.telephone_number %></td>
  </tr>
  <tr class="row">
    <td class="table-active col-lg-2">メールアドレス</td>
    <td class="col-lg-7"><%= current_customer.email %></td>
  </tr>
</table>

<table class="container">
  <tr class="row">
    <td class="col-lg-1"><strong>配送先</strong></td>
    <td><%= link_to "一覧を見る", addresses_path %></td>
  </tr>
  <tr class="row">
    <td class="col-lg-1"><strong>注文履歴</strong></td>
    <td><%= link_to "一覧を見る", orders_path %></td>
  </tr>
</table>
