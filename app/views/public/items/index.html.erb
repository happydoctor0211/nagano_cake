
<div class="container">
  <div class="col-lg-3">
    <h3>商品一覧（全<%= @items_count %>件）</h3>
  </div>
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-lg-3">
     <%= link_to(item_path(item)) do %>
        <%= attachment_image_tag item, :image, style: "width: 200px;" %> </br>
        <%= item.name %> </br>
        ¥<%= item.price.to_s(:delimited) %>
     <% end %>
   </div>
   <% end %>
  </div>
</div>
