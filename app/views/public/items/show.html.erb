<%= attachment_image_tag @item, :image, style: "width: 200px;" %>
<h3><%= @item.name %></h3>
<p><%= @item.introduction %></p>
<p>¥<%= @item.price %></p>


<%= form_with model: @cart_item, local: true, url:cart_items_path, method: :post do |f| %>
 <%= f.hidden_field :item_id, value: @item.id %>
 <%= f.select :amount, options_for_select((1..20).to_a), include_blank: "個数選択" %>
 <%= f.submit "カートに入れる" %>
<% end %>