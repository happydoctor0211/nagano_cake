<h3>注文履歴一覧</h3>

<h4>注文情報</h4>
<table>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %>
  </tr>
  <tr>
    <td>配送先</td>
    <td>
      〒<%= @order.postal_code %> </br>
      <%= @order.address %> </br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.method_payment %></td>
  </tr>
  <tr>
    <td>ステータス</td>
    <td><%= @order.status %></td>
  </tr>
</table>

<h4>請求情報</h4>
<table>
  <tr>
    <td>商品合計</td>
    <td></td>
  </tr>
  <tr>
    <td>配送料</td>
    <td></td>
  </tr>
  <tr>
    <td>ご請求額</td>
    <td><%= @order.total_payment %></td>
  </tr>
</table>