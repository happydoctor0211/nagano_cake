<h3>ショッピングカート</h3>

<p><%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %> </p>

<table>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <% @sum = 0 %> <!--初期値-->
  <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= (cart_item.item.price * 1.1).round(0) %></td>
    <td>
      <%= form_with model: cart_item, local: true, url:cart_item_path(cart_item), method: :patch do |f| %>
       <%#= f.select :amount, options_for_select((1..10).to_a, {selected: cart_item.amount}) %>
       <%= f.select :amount, options_for_select((1..10).to_a, {selected: cart_item.amount.to_i} ) %>
       <%= f.submit "変更" %>
      <% end %>
    </td>
    <td><%= (cart_item.item.price * 1.1).round(0) * cart_item.amount %></td>
    <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete %></td>
  </tr>
  <% @sum += (cart_item.item.price * 1.1).round(0) * cart_item.amount %>
  <% end %>
  <tr>
    <td>合計金額</td>
    <td><%= @sum %></td>
  </tr>
</table>

<p><%= link_to "買い物を続ける", items_path %></p>

<p><%= link_to  "情報入力に進む", new_order_path %></p>