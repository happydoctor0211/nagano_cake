<div class="container">
   <h4>商品編集</h4>
</div>

<%= form_with model:@item, local: true, url: admin_item_path(@item), method: :patch do |f| %>
<table class="container">
  <tr class="row">
    <td class="col-lg-2">商品画像</td>
    <td><%= f.attachment_field :image %></td>
  </tr>
  <tr class="row">
     <td class="col-lg-2">商品名</td>
     <td><%= f.text_field :name %></td>
  </tr>
  <tr class="row">
    <td class="col-lg-2">商品説明</td>
    <td><%= f.text_area :introduction %></td>
  </tr>
  <tr class="row">
    <td class="col-lg-2">ジャンル</td>
    <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
  </tr>
  <tr class="row">
    <td class="col-lg-2">税抜価格</td>
    <td><%= f.text_field :price %>円</td>
  </tr>
  <tr class="row">
    <td class="col-lg-2">販売ステータス</td>
    <td>
      <%= f.radio_button :is_active, true %>
　    <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売停止中', value: false %>
    </td>
  </tr>
</table>

<div class="container">
   <%= f.submit '変更を保存' %>
</div>

<% end %>