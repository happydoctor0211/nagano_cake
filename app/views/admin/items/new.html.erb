<h3>商品新規登録</h3>
<%= form_with model: @item, local: true, url: admin_items_path  do |f| %>

<p>商品画像  <%= f.attachment_field :image %></p>

<p>商品名  <%= f.text_field :name %></p>

<p>商品説明 <%= f.text_area :introduction %></p>

<p>ジャンル <%= f.collection_select :genre_id, Genre.all, :id, :name %></p>

<p>税抜価格  <%= f.text_field :price %> 円</p>

<p>
  販売ステータス
  <%= f.radio_button :is_active, true %>
　<%= f.label :is_active, '販売中', value: true %>
　<%= f.radio_button :is_active, false %>
　<%= f.label :is_active, '販売停止中', value: false %>
</p>

<%= f.submit '新規登録' %>
<% end %>