<h3>商品一覧</h3>
<p>
  <%= link_to(new_admin_item_path) do %>
  ➕
  <% end %>
</p>

<table>
  <tr>
    <td><strong>商品ID</strong></td>
    <td><strong>商品名</strong></td>
    <td><strong>税抜価格</strong></td>
    <td><strong>ジャンル</strong></td>
    <td><strong>ステータス</strong></td>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td>
       <%= link_to(admin_item_path(item)) do %>
         <%= item.name %>
       <% end %>
    </td>
    <td><%= (item.price).to_s(:delimited) %>円</td>
    <td><%= item.genre.name %></td>
    <td>
      <% item.is_active %>
      <% if item.is_active == true %>
       販売中
      <% else %>
       販売停止中
      <% end %>
    </td>
  </tr>
  <% end %>
</table>