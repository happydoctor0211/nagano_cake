<div class="container">
  <h4>商品詳細</h4>
</div>

<div class="container">
  <div class="row">
   <div class="col-lg-3">
    <%= attachment_image_tag @item, :image, style: "width: 200px;" %>
   </div>
   <table class="col-lg-7">
    <tr class="row">
     <td class="col-lg-3">商品名</td>
     <td><%= @item.name %></td>
    </tr>
    <tr class="row">
     <td class="col-lg-3">商品説明</td>
     <td><%= @item.introduction %></td>
    <tr class="row">
     <td class="col-lg-3">ジャンル</td>
     <td><%= @item.genre.name %></td>
    </tr>
    <tr class="row">
     <td class="col-lg-3">税込価格</br>(税抜価格)</td>
     <td><%= @in_tax.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
    </tr>
    <tr class="row">
     <td class="col-lg-3">販売ステータス</td>
     <td>
      <% if @item.is_active == true %>
       <p class="text-success"><strong>販売中</strong></p>
      <% else %>
       <p class="text-secondary"><strong>販売停止中</strong></p>
      <% end %>
     </td>
    </tr>
   </table>
 </div>
</div>

<div class="container">
    <%= link_to "編集する", edit_admin_item_path(@item) %>
</div>
