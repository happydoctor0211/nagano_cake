<h3>会員一覧</h3>

<table>
  <tr>
    <td>会員ID</td>
    <td>氏名</td>
    <td>メールアドレス</td>
    <td>ステータス</td>
  </tr>
  <% @customers.each do |customer| %>
  <tr>
    <td><%= customer.id %></td>
    <td>
      <%= link_to(admin_customer_path(customer)) do %>
       <%= customer.first_name %><%= customer.last_name %>
      <% end %>
    </td>
    <td><%= customer.email %></td>
    <td>
      <% customer.is_active %>
      <% if customer.is_active == true %>
       <p>有効</p>
      <% else %>
       <p>退会</p>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>