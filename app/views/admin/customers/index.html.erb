<h3>会員一覧</h3>

<table>
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <% @customers.each do |customer| %>
  <tr>
    <td><%= customer.id %></td>
    <td>
      <%= link_to(admin_customer_patk(customer)) do %>
       <%= customer.first_name %><%= customer.last_name %>
      <% end %>
    </td>
    <td><%= customer.email %></td>
    <td>
      <% customer.is_active %>
      <% if customer.is_active == true %>
       <p>有効</p>
      <% else %>
       <p>退会</p>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>