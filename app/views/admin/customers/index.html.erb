<div class="container">
   <h4>会員一覧</h4>
</div>

<table class="container table">
  <tr class="row thead-light">
    <th class="col-lg-1">会員ID</th>
    <th class="col-lg-2">氏名</th>
    <th class="col-lg-3">メールアドレス</th>
    <th class="col-lg-2">ステータス</th>
  </tr>
  <% @customers.each do |customer| %>
  <tr class="row">
    <td class="col-lg-1"><%= customer.id %></td>
    <td class="col-lg-2">
      <%= link_to(admin_customer_path(customer)) do %>
       <%= customer.first_name %><%= customer.last_name %>
      <% end %>
    </td>
    <td class="col-lg-3"><%= customer.email %></td>
    <td class="col-lg-2">
      <% customer.is_active %>
      <% if customer.is_active == true %>
       <p class="text-success"><strong>有効</strong></p>
      <% else %>
       <p class="text-secondary"><strong>退会</strong></p>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>