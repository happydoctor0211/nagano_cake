<h3><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h3>
<%= form_with model:@customers, local: true, url: admin_item_path(@customer), metod: :patch do |f| %>
<p>会員ID <%= @customer.id %></p>
<p>氏名  <%= f.text_field :first_name %>  <%= f.text_field :last_name %></p>
<p>フリガナ  <%= f.text_field :first_name_kana %>  <%= f.text_field :last_name_kana %></p>
<p>郵便番号 <%= f.text_field :address %></p>
<p>電話番号 <%= f.text_field :telephone_number %></p>
<p>メールアドレス <%= f.text_field :email %></p>
<p>
  会員ステータス
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active, '有効', value: true %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active, '有効', value: false %>
</p>
<%= f.submit '変更を保存する' 
<% end %>